<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
    >
        <EditText android:layout_width="170dp" android:layout_height="wrap_content"
                  android:id="@+id/etUserName"
            android:hint="Enter username"/>
            <Button android:layout_width="170dp" android:layout_height="wrap_content"
            android:text="Start Game"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorAccent"
            android:id="@+id/btnGame"/>
        </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="8dp"
    android:orientation="vertical" android:id="@+id/loBoard" android:gravity="center">

    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView android:layout_width="100dp" android:layout_height="100dp"
        android:id="@+id/position1"
                  android:gravity="center"
                  android:textSize="60sp"
        android:background="@drawable/border_textview"/>
        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/position2"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/position3"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/position4"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/position5"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/position6"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/position7"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/position8"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/position9"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
    </LinearLayout>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/tvMessage"
                  android:gravity="center"
                  android:textStyle="bold"
                  android:layout_marginTop="16dp"
                  android:textSize="22sp"/>

    </LinearLayout>


</LinearLayout>