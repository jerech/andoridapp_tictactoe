<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
    >
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/etUserName"
            android:hint="Enter username"/>
            <Button android:layout_width="130dp" android:layout_height="wrap_content"
            android:text="Iniciar Juego"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="16dp"
                    android:background="@color/colorAccent"
            android:id="@+id/btnGame"/>
        </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView android:layout_width="100dp" android:layout_height="100dp"
        android:id="@+id/positio1"
                  android:gravity="center"
                  android:textSize="60sp"
        android:background="@drawable/border_textview"/>
        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/positio2"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/positio3"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/positio4"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/positio5"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/positio6"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/positio7"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/positio8"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:id="@+id/positio9"
                  android:gravity="center"
                  android:textSize="60sp"
                  android:background="@drawable/border_textview"/>
    </LinearLayout>


</LinearLayout>